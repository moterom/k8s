  selector:
    matchLabels:
      app: api-recommendations
  replicas: 1
  template:
    metadata:
      labels:
        app: api-recommendations
    spec:
      containers:
      - name: api-recommendations
        image: 862980326144.dkr.ecr.us-east-1.amazonaws.com/api_recommendations:dev-IMAGE_TAG
        resources:
          requests:
            memory: "64Mi"
            cpu: "125m"
        ports:
        - containerPort: 4000
