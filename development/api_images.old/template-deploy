apiVersion: apps/v1
kind: Deployment
metadata:
  name: deploy-api-images
spec:
  selector:
    matchLabels:
      app: api-images
  replicas: 1
  template:
    metadata:
      labels:
        app: api-images
    spec:
      containers:
      - name: api-images
        image: 862980326144.dkr.ecr.us-east-1.amazonaws.com/api_images:dev-IMAGE_TAG
        resources:
          requests:
            memory: "1.5Gi"
            cpu: "125m"
        ports:
        - containerPort: 9999
